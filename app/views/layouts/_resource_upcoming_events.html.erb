<% Settings.upcoming_events.each do |event| %>
  <div class="px-4 sm:px-0 flex flex-wrap mb-3 text-sm">
    <div class="w-1/2 sm:w-1/6 text-center bg-gray-400 px-4 py-2 rounded-md text-white bg-indigo-600 font-bold">
      <div class="flex items-center justify-center h-full">
        <%= event[:time] %>
      </div>
    </div>
    <div class="w-1/2 sm:w-1/6 text-center bg-gray-400 px-4 py-2 bg-indigo-100 text-indigo-600 font-bold">
      <div class="flex items-center justify-center h-full">
        <%= event[:date] %>
      </div>
    </div>
    <div class="w-full sm:w-4/6 bg-white py-4">
      <div class="flex flex-wrap h-full items-center justify-center">
        <div class="w-full sm:w-9/12 px-8 text-gray-500">
          <%= event[:title].html_safe %>
        </div>

        <% if event[:cta_url] %>
          <div class="w-full sm:w-3/12 text-center mt-8 sm:mt-0">
            <%= link_to event[:cta_url] do %>
              <span class="text-sm relative inline-flex items-center px-4 py-2 border border-transparent leading-5 rounded-md font-bold  bg-indigo-200 text-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700 rounded-md shadow-sm">
                <%= event[:cta_text] %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
