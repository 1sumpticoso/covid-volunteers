<% Settings.upcoming_events.each do |event| %>
  <div class="grid grid-cols-12 mb-3 text-sm">
    <div class="col-span-2 text-center bg-gray-400 px-4 py-2 rounded-md text-white bg-indigo-600 font-bold">
      <div class="flex items-center justify-center h-full">
        <%= event[:time] %>
      </div>
    </div>
    <div class="col-span-2 text-center bg-gray-400 px-4 py-2 bg-indigo-100 text-indigo-600 font-bold">
      <div class="flex items-center justify-center h-full">
        <%= event[:date] %>
      </div>
    </div>
    <div class="col-span-8 bg-white px-8 py-4">
      <div class="flex flex-row items-center justify-center h-full">
        <div>
          <%= event[:title].html_safe %>
        </div>

        <% if event[:cta_url] %>
          <div class="rounded-md shadow-sm flex-shrink-0 ml-8">
            <%= link_to event[:cta_url] do %>
              <span class="text-sm relative inline-flex items-center px-4 py-2 border border-transparent leading-5 rounded-md font-bold  bg-indigo-200 text-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700">
                <%= event[:cta_text] %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
