<div class="container">
  <div class="px-4 sm:px-0 grid grid-cols-1 sm:grid-cols-2 gap-6">
    <% @offers.each do |offer| %>
      <%= link_to offer_path(offer), class: "block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out" do %>
        <div class="bg-white rounded-lg shadow">
          <div class="flex items-center justify-between px-4 pt-4 sm:px-6">
            <div class="text-sm leading-5 font-medium text-indigo-600 truncate">
              <%= offer.name %>
            </div>
          </div>
          <div class="mt-2 sm:flex sm:justify-between px-4 pt-2 pb-1 sm:px-6">
            <div class="text-sm leading-5 text-gray-500">
              <%= simple_format offer.description, class: 'mb-2' %>
            </div>
          </div>
          <div class="mt-2 sm:flex sm:justify-between px-4 pt-2 pb-2 sm:px-6 bg-indigo-100 text-indigo-600">
            <div class="sm:flex">
              <div class="mt-2 flex items-center text-xs leading-5 sm:mt-0">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <%= offer.location.present? ? offer.location : 'Global' %>
              </div>
            </div>
            <div class="mt-2 flex items-center text-xs leading-5 sm:mt-0">
              <span>
                Created
                <time><%= distance_of_time_in_words_to_now offer.created_at %> ago</time>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
