<div class="container">
  <%= render partial: 'categories-nav' %>

  <%= render partial: 'category-info' if @project_category %>

  <div class="w-full rounded bg-indigo-100 flex jsutify-between p-4 px-8">
    <div class="flex-1 flex">
      <div class="font-bold">Filter by</div>
      <select name="countries" id="countries">
        <% get_country_fields().each do |country, code| %>
          <option value="<%= code %>"><%= country %></option>
        <% end %>
      </select>
      <select name="skills" id="skills">
      </select>
      <select name="project_types" id="project_types"></select>
      <select name="status" id="status"></select>
    </div>
    <div class="flex">
      <div class="font-bold mr-2">Sort by</div>
      <%= sort_drop_down do %>
        <%= sort_drop_down_option(projects_path, 'Sort by') %>
        <%= sort_drop_down_option(projects_path, 'Volunteers Needed', 'volunteers_needed') %>
        <%= sort_drop_down_option(projects_path, 'Latest', 'latest') %>
        <%= sort_drop_down_option(projects_path, 'Earliest', 'earliest') %>
      <% end %>
    </div>
  </div>
</div>
