<div class="mb-8">
  <div class="flex mb-4">
    <div class="mr-4"><%= inline_svg_pack_tag "media/svgs/group-#{group[:name].downcase}.svg" %></div>
    <div class="w-full">
      <div><%= section_name group[:name] %></div>
      <div class="w-full">
        <%= group[:body] %>
        <%= link_to projects_path(project_types: group[:project_skills].join(',')), class: 'float-right text-indigo-700 font-bold group' do %>
          See all <%= group[:projects_count] %> projects <%= inline_svg_pack_tag 'media/svgs/chevron-right.svg', class: 'inline-block fill-current transform transition-transform duration-100 -translate-x-1 group-hover:translate-x-0' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="w-full px-4 space-y-bottom-4 sm:grid sm:grid-cols-3 sm:gap-6">
    <%= render partial: 'projects/project-card', collection: group[:featured_projects], as: :project, cached: true %>
  </div>
</div>
