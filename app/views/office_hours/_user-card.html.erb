<div class="relative transform shadow-users transition-all duration-100 hover:scale-105 flex flex-col justify-between bg-white">
  <div class="flex-1 flex flex-col justify-between p-5">
    <div class="flex-col">
      <div class="w-full flex justify-between mb-2">
        <div class="text-indigo-500 text-lg font-medium">
          <% if user.name.present? %>
            <%= link_to user.name, profile_path(user) %>
          <% else %>
            <%= link_to user.email, profile_path(user) %>
          <% end %>
        </div>
      </div>
      <div class="w-fullmb-2">
        <% if user.skills.present? %>
          <div class="relative w-full h-6 mb-4">
            <span class="scroll-gradient-right inline-block w-4 h-6 absolute right-0 z-50"></span>
            <div class="w-full overflow-x-auto scrolling-touch scrollbar-hidden">
              <div class="flex flex-row flex-no-wrap flex-shrink-0 flex-shrink-0 space-x-right-2">
                <%= skill_badges user.skills.collect { |s| s.name }, limit: 3, color: 'blue', model: 'projects', filter_by: 'skills' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="w-full mb-3">
        <%= simple_format user.about.truncate(130), class: 'text-sm leading-tight text-gray-500' %>
      </div>
    </div>
  </div>

  <div class="px-5 pt-5 bg-indigo-100 flex justify-between text-sm text-indigo-500">
    <div class="flex flex-col">
      <div class="w-full flex flex-wrap justify-center text-gray-500 fill-current text-xs">
        <% user.future_office_hours.each do |oh| %>
          <%= link_to 'javascript:void(0)' do %>
            <span class="inline-flex rounded-md shadow-sm mb-3 px-3">
              <button type="button" class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs leading-4 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150">
                <%= oh.start_at.strftime('%b %e, %l:%M %p') %>
              </button>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
